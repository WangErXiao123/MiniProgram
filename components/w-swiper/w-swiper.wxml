<swiper class="swiper"
        circular
        autoplay
        interval="3000"
        duration="300"
        indicator-dots
        indicator-active-color="#ff5777">
  <block wx:for="{{images}}" wx:key="index">
    <swiper-item class="swiper-item">
      <image class="swiper-item" src="{{item}}" alt="picture" mode="widthFix"/>
    </swiper-item>
  </block>
</swiper>
