<view class="home">
  <view hidden="{{!ShowTabControl}}">
    <w-tab-control class="tab-control-temp"
                   titles="{{titles}}"
                   bind:tabclick="{{tabClick}}"/>
  </view>
  <scroll-view class="content"
                scroll-y
                bindscrolltolower="loadMore"
                scroll-with-animation="true"
                scroll-top="{{topPosition}}"
                bindscroll="scrolPosition">
    <!-- 1.展示轮播图 -->
    <w-swiper images="{{banners}}" />
    <!-- 2.推荐数据的展示 -->
    <w-recommend recommends="{{recommends}}"
    bind:imageLoad="onImageLoad"/> 
    <w-feature />
    <w-tab-control class="tab-control" titles="{{titles}}"
                    bind:tabclick="tabClick"/>
    <w-goods goodslist="{{goods[currentTpye].list}}" />
    <w-back-top bindtab="onBackTop" wx:if="{{showBacktop}}"/>

  </scroll-view>
</view>






<!-- 3.展示本周流行 -->
<view class="popular">
  <image src="/assets/images/home/recommend_bg.jpg" />
</view>